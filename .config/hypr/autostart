#!/usr/bin/bash

# variables
config=$HOME/.config/hypr
scripts=$config/scripts

# wallpaper
hostname=$(cat /etc/hostname) # gets hostname
setwallpaper() {
	"$scripts"/wallpaper $1 &
}
if [ "$hostname" = "home" ]; then
	setwallpaper "/home/alexander/Pictures/wallpaper.png"
elif [ "$hostname" = "lighthouse" ]; then
	setwallpaper "/home/alexander/Pictures/wallpaper.png"
elif [ "$hostname" = "fatfrogironscrap" ]; then
	setwallpaper "/home/alexander/Nextcloud/wallpapers/midjourney/architecture_sketch_of_running_computer_full2.png"
fi

# Execute your favorite apps at launch
pgrep -x "waybar" >/dev/null && pkill -x "waybar"; waybar &
#exec-once = wl-paste --watch cliphist store
pgrep -x "wl-paste" >/dev/null && pkill -x "wl-paste"; wl-paste --watch cliphist store &
# exec-once = wl-paste --type text --watch cliphist store #Stores only text data
# exec-once = wl-paste --type image --watch cliphist store #Stores only image data

# setting the right polkit
# exec-once=/usr/bin/pkttyagent
# exec-once=/usr/bin/polkit-dumb-agent
# exec-once=/usr/lib/polkit-kde-authentication-agent-1
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
