[user]
	email = alexanderlhc@disroot.org
	name = Alexander Christensen
[init]
	defaultBranch = main
[alias]
	clone-for-worktrees = "!sh $HOME/.local/bin/git-clone-bare-for-worktrees"
  auto-small= "!sh $HOME/.local/bin/git-auto-small"
  prune-branches= "!sh $HOME/.local/bin/git-prune-branches"
[core]
	editor = nvim
[push]
	autoSetupRemote = true
[rerere]
	enabled = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
